<joblist>   
   <job> 
     <name>start</name>  
       <description>start the app servers -- uses node rank ordering</description>  
     <loglevel>INFO</loglevel>  
     <group>ops/app</group>  
    <context> 
      <options> 
        <option name="dir" enforcedvalues="true" required="true" 
           values='anvils'/>                  
      </options>        
    </context>  
    <sequence keepgoing='false' strategy='node-first'>
      <command>
        <node-step-plugin type='com.anvils.springboot.start'>
          <configuration>
            <entry key='APP_NAME' value='anvils' />
            <entry key='JARFILE' value='anvils.jar' />
            <entry key='conf_folder' value='anvils/conf' />
          </configuration>
        </node-step-plugin>
      </command>
    </sequence>
    <nodefilters excludeprecedence="true"> 
      <include> 
        <tags>app</tags> 
      </include> 
   </nodefilters>  
   <dispatch> 
      <excludePrecedence>true</excludePrecedence>
      <keepgoing>true</keepgoing>
      <rankAttribute>anvils:server-pool-id</rankAttribute>
      <rankOrder>ascending</rankOrder>
      <threadcount>1</threadcount>
   </dispatch> 
  </job>
</joblist>
